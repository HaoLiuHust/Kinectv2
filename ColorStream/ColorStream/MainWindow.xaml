<Window x:Class="ColorStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="kinectDisplay" Source="{Binding Bitmap}"/>
        <StatusBar Grid.Row="1" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <StatusBarItem Name="statusItem" Content="{Binding StatusText}"/>
        </StatusBar>
        
    </Grid>
</Window>
